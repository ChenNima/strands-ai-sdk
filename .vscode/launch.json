{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "api.index:app",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}/packages/service",
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "install-dependencies",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
